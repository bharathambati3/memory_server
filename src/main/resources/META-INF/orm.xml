<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm http://java.sun.com/xml/ns/persistence/orm_2_0.xsd"
                 version="2.0">

    <named-query name="revision.active.list">
        <query>FROM MemoRevisionQueue where isCurrentRevisionDone = :isCurrentRevisionDone</query>
    </named-query>

    <named-query name="memory.queue.find.by.memory.id">
        <query>FROM MemoRevisionQueue where memoRecord = :memoRecord</query>
    </named-query>

    <named-query name="revision.pattern.find.by.type">
        <query>FROM RevisionPattern where type = :type ORDER BY duration ASC</query>
    </named-query>

    <named-query name="queue.to.be.updated">
        <query>FROM MemoRevisionQueue where nextRevisionOn &lt; NOW() AND isCurrentRevisionDone = true</query>
    </named-query>

</entity-mappings>